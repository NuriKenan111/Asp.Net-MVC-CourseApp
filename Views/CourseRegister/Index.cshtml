@model IEnumerable<CourseRegistration>

<h1>Course Registration</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width: 150px;">@Html.DisplayNameFor(m => m.CourseRegistrationId)</th>
            <th>@Html.DisplayNameFor(m => m.Student.StudentName) </th>
            <th>@Html.DisplayNameFor(m => m.Course.CourseName)</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@Html.DisplayFor(m => item.CourseRegistrationId)</td>
                <td>@Html.DisplayFor(m => item.Student.StudentName)</td>
                <td>@Html.DisplayFor(m => item.Course.CourseName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>